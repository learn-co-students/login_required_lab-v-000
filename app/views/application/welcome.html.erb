<% if current_user %>
  <h1>Hi, <%= current_user %>.</h1>
  <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
    <%= link_to 'view secret', secrets_show_path %>
    <input type=submit value='logout' />
  <% end %>
<% else %>
  <%= link_to 'login', login_path %>
<% end %>
