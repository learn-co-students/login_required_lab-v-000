<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag({controller: "sessions", action: :create, method: :post }) do  %>

      <%= label_tag :name %>:
      <%= text_field_tag :name %><br>

      <%= submit_tag "Log in" %>
    <% end %>

  </div>
</div>
