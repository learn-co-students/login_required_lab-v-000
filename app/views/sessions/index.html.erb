<% if !current_user %>

  <%= link_to 'Please click here to log in', login_path %>

<% else %>

  <h1>Hi, <%= session[:name] %>.</h1>

  <%= link_to 'Pleas click here to visit the secret page', secret_path %><br><br> 

  <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
    <input type=submit value='logout'>
  <% end %>

<% end %>
